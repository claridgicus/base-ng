{
  "name": "base-ng",
  "version": "0.0.0",
  "homepage": "https://base-ng.com",
  "scripts": {
    "ng": "ng",
    "start": "ng serve @base-ng/docs",
    "build": "ng build @base-ng/ui && ng build @base-ng/docs && ng build lander && node scripts/combine-builds.js",
    "build:docs": "ng build @base-ng/ui && ng build @base-ng/docs",
    "build:lander": "ng build lander",
    "build:lib": "ng build @base-ng/ui",
    "watch": "ng build --watch --configuration development",
    "test": "ng test @base-ng/ui --no-watch",
    "test:watch": "ng test @base-ng/ui",
    "test:coverage": "ng test @base-ng/ui --no-watch --coverage",
    "serve:ssr:base-ng": "node dist/base-ng/server/server.mjs",
    "serve:ssr:@base-ng/docs": "node dist/@base-ng/docs/server/server.mjs",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.0.0",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/ssr": "^21.1.2",
    "@floating-ui/dom": "^1.7.5",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "shiki": "^3.22.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@types/pngjs": "^6.0.5",
    "autoprefixer": "^10.4.24",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.1.0",
    "playwright": "^1.58.1",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "semantic-release": "^24.2.9",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
